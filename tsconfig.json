{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2016",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}