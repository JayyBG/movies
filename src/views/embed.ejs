<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;400;500;600;700;800;900&display=swap">    
    <link rel="stylesheet" href="https://assets.lol/libs/fontawesome-6.2.0/css/all.min.css">
    <style>
      :root{
        --plyr-color-main: "#5954d7";
        --plyr-font-size-large: 25px;
        --plyr-font-size-xlarge: 30px;
      }

      *{
        padding: 0; 
        margin: 0; 
      }
      
      body{
        color: #fff;
        background-color: #000;

        font-family: 'Montserrat', sans-serif;
      }

      iframe{
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

        border: none;
      }

      .ripper{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        position: fixed;

        bottom: 50px;
        left: 50%;

        width: calc(100% - 80px);
        max-width: 500px;

        padding: 15px 20px;

        color: #000;
        background-color: #ffffff;
        border-radius: 5px;

        text-align: center;
        text-decoration: none;

        transform: translateX(-50%);

        user-select: none;
      }

      .ripper h3{
        border-bottom: 1px solid transparent;

        font-size: 20px;
        font-weight: 700;
      }

      .ripper:hover h3{
        border-bottom: 1px solid #000;
      }

      .ripper p{
        font-size: 14px;
        font-weight: 400;
      }

      .ripper .close{
        cursor: pointer;

        position: absolute;

        padding: 10px 15px;
        top: 0;
        right: 0;
      }
    </style>
    <script>
      var _paq = window._paq = window._paq || [];
      _paq.push(['trackPageView']);
      _paq.push(['enableLinkTracking']);
      (function() {
        var u="//analytics.ripper.lol/";
        _paq.push(['setTrackerUrl', u+'matomo.php']);
        _paq.push(['setSiteId', '14']);
        var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
        g.async=true; g.src=u+'matomo.js'; s.parentNode.insertBefore(g,s);
      })();
    </script>
  </head>
  <body>
    <iframe src="<%= source %>" frameborder="0" allowfullscreen></iframe>

    <a class="ripper" href="https://rypr.io/?from=rembed" target="_blank">
      <h3>RYPR.IO</h3>
      <p>Free & private email, file hosting & more</p>
      <div class="close">
        <i class="fa-solid fa-close"></i>
      </div>
    </a>

    <script>
      let r = document.querySelector('.ripper'), c = document.querySelector('.close');

      if(document.referrer){
        r.href = r.href+"&ref="+document.referrer;
      }

      c.addEventListener('click', (e) => {
        e.preventDefault();
        
        r.style.display = 'none';
      });
    </script>
